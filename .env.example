# Database (CRITICAL)
# Local development
DATABASE_URL="postgresql://user:password@localhost:5432/warehouse_optimizer"
DIRECT_URL="postgresql://user:password@localhost:5432/warehouse_optimizer"

# Production (use connection pooling for Vercel)
# DATABASE_URL="postgresql://user:password@host:5432/warehouse_optimizer?pgbouncer=true&connection_limit=1"
# DIRECT_URL="postgresql://user:password@host:5432/warehouse_optimizer"

# App
NODE_ENV="development"
# NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Upstash Redis (for rate limiting)
# Sign up for free at https://upstash.com (10,000 requests/day on free tier)
# UPSTASH_REDIS_REST_URL="https://your-redis-url.upstash.io"
# UPSTASH_REDIS_REST_TOKEN="your-token-here"

# API Authentication
# Generate a secure random key (32+ characters)
# Example: openssl rand -base64 32
# API_SECRET_KEY="your-secret-key-here-minimum-32-characters-required"

# Sentry (Error Tracking)
# Sign up at https://sentry.io and create a project
# NEXT_PUBLIC_SENTRY_DSN="https://your-key@your-org.ingest.sentry.io/your-project-id"
# SENTRY_ORG="your-organization-slug"
# SENTRY_PROJECT="your-project-name"
# SENTRY_AUTH_TOKEN="your-auth-token-for-source-maps"

# Skip env validation (useful for Docker builds)
# SKIP_ENV_VALIDATION=true

# Vercel Blob Storage (CRITICAL for file uploads)
# Get this from Vercel Dashboard → Storage → Blob → Settings
BLOB_READ_WRITE_TOKEN="vercel_blob_rw_xxxxxxxxx"

# Production Rate Limiting (100 requests/10min per IP on upload endpoints)
# Set to "true" to enable rate limiting in production
ENABLE_RATE_LIMITING="false"

# NextAuth
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-nextauth-secret-key-min-32-chars"
# NEXTAUTH_URL="http://localhost:3000"

# Email (Resend)
# Sign up at https://resend.com
# RESEND_API_KEY="re_your_api_key"
EMAIL_FROM="noreply@yourdomain.com"

# Slack (Optional)
# Create Slack App at https://api.slack.com/apps
# SLACK_BOT_TOKEN="xoxb-your-slack-bot-token"
