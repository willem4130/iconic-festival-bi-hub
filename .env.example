# Database (CRITICAL)
# Local development
DATABASE_URL="postgresql://user:password@localhost:5432/iconic_bi_hub"
DIRECT_URL="postgresql://user:password@localhost:5432/iconic_bi_hub"

# Production (use connection pooling for Vercel)
# DATABASE_URL="postgresql://user:password@host:5432/iconic_bi_hub?pgbouncer=true&connection_limit=1"
# DIRECT_URL="postgresql://user:password@host:5432/iconic_bi_hub"

# App
NODE_ENV="development"
# NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Upstash Redis (for rate limiting)
# Sign up for free at https://upstash.com (10,000 requests/day on free tier)
# UPSTASH_REDIS_REST_URL="https://your-redis-url.upstash.io"
# UPSTASH_REDIS_REST_TOKEN="your-token-here"

# API Authentication
# Generate a secure random key (32+ characters)
# Example: openssl rand -base64 32
# API_SECRET_KEY="your-secret-key-here-minimum-32-characters-required"

# Sentry (Error Tracking)
# Sign up at https://sentry.io and create a project
# NEXT_PUBLIC_SENTRY_DSN="https://your-key@your-org.ingest.sentry.io/your-project-id"
# SENTRY_ORG="your-organization-slug"
# SENTRY_PROJECT="your-project-name"
# SENTRY_AUTH_TOKEN="your-auth-token-for-source-maps"

# Skip env validation (useful for Docker builds)
# SKIP_ENV_VALIDATION=true

# Vercel Blob Storage (CRITICAL for file uploads)
# Get this from Vercel Dashboard → Storage → Blob → Settings
BLOB_READ_WRITE_TOKEN="vercel_blob_rw_xxxxxxxxx"

# Production Rate Limiting (100 requests/10min per IP on upload endpoints)
# Set to "true" to enable rate limiting in production
ENABLE_RATE_LIMITING="false"

# NextAuth
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-nextauth-secret-key-min-32-chars"
# NEXTAUTH_URL="http://localhost:3000"

# Email (Resend)
# Sign up at https://resend.com
# RESEND_API_KEY="re_your_api_key"
EMAIL_FROM="noreply@yourdomain.com"

# Slack (Optional)
# Create Slack App at https://api.slack.com/apps
# SLACK_BOT_TOKEN="xoxb-your-slack-bot-token"

# ==========================================
# META (FACEBOOK/INSTAGRAM) API
# ==========================================
# Create app at https://developers.facebook.com/apps
# Required permissions: pages_read_engagement, pages_read_user_content,
# instagram_basic, instagram_manage_insights, ads_read
META_APP_ID="your-meta-app-id"
META_APP_SECRET="your-meta-app-secret"
# Long-lived page access token (60 days, auto-refresh in code)
META_ACCESS_TOKEN="your-long-lived-access-token"
# Facebook Page ID to track
META_PAGE_ID="your-facebook-page-id"
# Instagram Business Account ID (linked to Facebook Page)
META_INSTAGRAM_ACCOUNT_ID="your-instagram-business-account-id"
# Ad Account ID (format: act_123456789)
META_AD_ACCOUNT_ID="act_your-ad-account-id"

# ==========================================
# EXTERNAL DATA SOURCES (CORRELATION ANALYSIS)
# ==========================================

# Visual Crossing Weather API (RECOMMENDED - better than OpenWeatherMap)
# Sign up at https://www.visualcrossing.com (free tier: 1000 requests/day)
# Features: 15-day forecast, historical data, better for event planning
VISUAL_CROSSING_API_KEY="your-visual-crossing-api-key"
VISUAL_CROSSING_LOCATION="Amsterdam,Netherlands"

# OpenWeatherMap API (DEPRECATED - use Visual Crossing instead)
# Sign up at https://openweathermap.org/api (free tier: 1000 calls/day)
# OPENWEATHERMAP_API_KEY="your-openweathermap-api-key"
# WEATHER_LOCATION_LAT="52.3676"
# WEATHER_LOCATION_LON="4.9041"

# ==========================================
# META ENHANCEMENT APIs (~$100/month budget)
# ==========================================

# Short.io - Link Attribution & UTM Tracking ($25/month)
# Sign up at https://short.io
# Features: UTM tracking, click analytics, conversion attribution
SHORT_IO_API_KEY="your-short-io-api-key"
SHORT_IO_DOMAIN="your-custom-domain.link"

# RiteTag - Hashtag Analytics ($9.50/month)
# Sign up at https://ritetag.com
# Features: Trending hashtags, banned tag detection, recommendations
RITETAG_API_KEY="your-ritetag-api-key"

# AWS Comprehend - Sentiment Analysis (~$15-20/month)
# Configure in AWS Console
# Features: Comment sentiment, key phrase extraction
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="eu-west-1"

# Brand24 - Social Listening ($49/month)
# Sign up at https://brand24.com
# Features: Brand mentions, influencer detection, reputation monitoring
BRAND24_API_KEY="your-brand24-api-key"
BRAND24_PROJECT_ID="your-brand24-project-id"

# Google Trends (uses unofficial API, no key needed)
# GOOGLE_TRENDS_ENABLED="true"
